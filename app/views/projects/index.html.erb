
<div class="row">
	
	<% @projects.each do |project| %>
		<h3>
			<%= link_to project_path(project), class: "icon-link" do %>
			<%= project.name %>
			<% end %>
			<small><%= project.description %></small>
			<div class="pull-right">
				<%= link_to edit_project_path(project), class: "icon-link" do %>
					<small><i class="glyphicon glyphicon-cog"></i></small>
					<% end %>
					<small><i class="glyphicon glyphicon-plus-sign"></i></small>
			</div>
		</h3>

		<ul class="list-group">
			<li class="list-group-item">No entries yet!</li>
		</ul>
	<% end %>
</div>